.home
  display flex
  height calc(100vh)
.index
  margin 0 auto
  align-self center
  width 300px
  height 800px
  font-size 30px

.order-detail
  transform translateX(-20px)
  margin-top 30px

.product-image
  position absolute

.table
  display flex
  align-items center
  margin 0 auto
  .ant-table-wrapper
    width 1400px

.add-product
  position absolute
  transform translate(91px, -60px)
  width 120px

.menu
  width 200px
  padding-left 20px
  .sub-menu
    .ant-menu-submenu-title
      font-size 16px
  .title
    margin 30px 0
    .ant-menu-submenu-title
      font-size 20px
      .ant-menu-submenu-arrow
        display none
  .logout
    .ant-menu-submenu-arrow
      display none
